<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.henry.ighubchurchapp.LoginPage"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/ighubchurch"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:paddingTop="20dp"
        android:src="@drawable/igchurch" />

    <EditText
        android:id="@+id/et_gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ighubchurch"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="88dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:hint="@string/password"
        android:layout_below="@id/et_gmail"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ighubchurch"
        android:layout_below="@+id/password"
        android:layout_marginStart="15dp"
        android:layout_marginTop="49dp"
        android:text="@string/click"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background=""/>

</RelativeLayout>
