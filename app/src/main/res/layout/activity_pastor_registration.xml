<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.henry.ighubchurchapp.PastorRegistration"
    android:background="@color/mycolour1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/design2"
        android:layout_margin="15dp"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ighubchurch"
                 />


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/show_dropdown_menu"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/menu"
                    android:textColor="#fff"
                    android:layout_marginEnd="70dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvPastor"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/pastor_detail"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textColor="#051005"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                style="@style/marginpadd">

                <TableRow>

                    <TextView
                        android:id="@+id/tvSurname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/surname"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>

                    <EditText
                        android:id="@+id/etSurname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:background="@drawable/border2"
                        style="@style/marginpadd"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/tvFirstname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>

                    <EditText
                        android:id="@+id/etFirstname"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:background="@drawable/border2"
                        style="@style/marginpadd"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvOthername"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/other_name"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>
                    <EditText
                        android:id="@+id/etOthername"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:background="@drawable/border2"
                        style="@style/marginpadd"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/border2"
                        android:textColor="#000"
                        style="@style/marginpadd"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="password"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:background="@drawable/border2"
                        android:textColor="#000"
                        style="@style/marginpadd"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvResidential"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/residential_address"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>
                    <EditText
                        android:id="@+id/etResidential"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000"
                        android:background="@drawable/border2"
                        style="@style/marginpadd"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="#000"
                        android:textSize="15sp"
                        style="@style/marginpadd"/>
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border2"
                        android:textColor="#000"
                        android:inputType="phone"
                        style="@style/marginpadd"
                        />
                </TableRow>

            </TableLayout>

        </LinearLayout>



        <Button
            android:id="@+id/btnRegister"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="@string/register"
            android:background="@drawable/button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/home_page"
            android:gravity="center"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


</ScrollView>
